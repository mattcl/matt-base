unbind C-b
set -g prefix C-a

unbind r
bind r source-file ~/.tmux.conf

setw -g utf8 on
setw -g status-utf on

set -g base-index 1
set -g pane-base-index 1

set -sg escape-time 1

# navigate panes
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# navigate windows
bind -r C-h select-window -t :-
bind -r C-l select-window -t :+

# resize
bind -r H resize-pane -L
bind -r J resize-pane -D
bind -r K resize-pane -U
bind -r L resize-pane -R

# splits
bind | split-window -h
bind - split-window -v

# vi in copy mode
setw -g mode-keys vi

# copy with y
# unbind [
bind Escape copy-mode
unbind p
bind p paste-buffer
bind -t vi-copy 'v' begin-selection
bind -t vi-copy 'y' copy-selection

# sync panes
bind C-s set-window-option synchronize-panes

set -g status-bg 'colour233'
set -g message-command-fg 'colour255'
set -g status-justify 'left'
set -g status-left-length '100'
set -g status 'on'
set -g pane-active-border-fg 'colour234'
set -g message-bg 'colour60'
set -g status-right-length '100'
set -g status-right-attr 'none'
set -g message-fg 'colour255'
set -g message-command-bg 'colour60'
set -g status-attr 'none'
set -g status-utf8 'on'
set -g pane-border-fg 'colour60'
set -g status-left-attr 'none'
setw -g window-status-fg 'colour247'
setw -g window-status-attr 'none'
setw -g window-status-activity-bg 'colour233'
setw -g window-status-activity-attr 'none'
setw -g window-status-activity-fg 'colour234'
setw -g window-status-separator ''
setw -g window-status-bg 'colour233'
set -g status-left '#[fg=colour252,bg=colour234,bold] [#S] #[fg=colour234,bg=colour233,nobold,nounderscore,noitalics]'
set -g status-right '#[fg=colour234,bg=colour233,nobold,nounderscore,noitalics]#[fg=colour252,bg=colour234] "#22T" #h %H:%M %d-%b-%y '
setw -g window-status-format '#[fg=colour233,bg=colour233,nobold,nounderscore,noitalics]#[default] #I:#W#F #[fg=colour233,bg=colour233,nobold,nounderscore,noitalics]'
setw -g window-status-current-format '#[fg=colour233,bg=colour60,nobold,nounderscore,noitalics]#[fg=colour255,bg=colour60] #I:#W#F #[fg=colour60,bg=colour233,nobold,nounderscore,noitalics]'
