# change this depending on system
set -g default-terminal "screen-256color"

# source the base conf file
source-file <%= File.join(@user_home, '.base-tmux.conf') %>

# customizations after this point

# set to main-horizontal with 60% height
bind m resize-pane -t 2 -x 80

bind b resize-pane -t 2 -x 60
